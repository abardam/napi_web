#bodywr
{
width:900px;
margin: 0 auto;
}



body
{
background:black;
margin:0px;
font-family: verdana, arial, helvetica, sans-serif;
}

table {
  border-collapse: collapse;
  margin: 10px auto 10px auto;
  font-weight: bold;
}

td {
  background-color: rgb(235,135,135);
  color: white;
  padding: 3px;
  min-width: 300px;
}

table th {
  border: 3px solid rgb(255,200,200);
}

th {
  background-color: rgb(231,153,153);
  color: white;
  font-size: 20px;
  padding: 5px;
  text-transform: uppercase;
}

td:first-child{
  text-align: left;
}

td:last-child{
  text-align: right;
}

h1.center
{
text-align:center;
}

h2 a {
  color: rgb(111,16,16);
  &:visited {
    color: rgb(194,99,99);
  }
  &:hover {
    color: #fff;
    background-color: #322;
  }
}

li a {
  color: rgb(111,16,16);
  &:visited {
    color: rgb(194,99,99);
  }
  &:hover {
    color: #fff;
    background-color: #322;
  }
}

a {
  color: rgb(111,16,16);
  &:visited {
    color: rgb(194,99,99);
  }
  &:hover {
    color: #fff;
    background-color: #322;
  }
}

div#contentwr{
background-image: linear-gradient(bottom, rgb(255,255,255) 74%, rgb(0,0,0) 0%, rgb(214,214,214) 21%);
background-image: -o-linear-gradient(bottom, rgb(255,255,255) 74%, rgb(0,0,0) 0%, rgb(214,214,214) 21%);
background-image: -moz-linear-gradient(bottom, rgb(255,255,255) 74%, rgb(0,0,0) 0%, rgb(214,214,214) 21%);
background-image: -webkit-linear-gradient(bottom, rgb(255,255,255) 74%, rgb(0,0,0) 0%, rgb(214,214,214) 21%);
background-image: -ms-linear-gradient(bottom, rgb(255,255,255) 74%, rgb(0,0,0) 0%, rgb(214,214,214) 21%);

background-image: -webkit-gradient(
	linear,
	left bottom,
	left top,
	color-stop(0.74, rgb(255,255,255)),
	color-stop(0, rgb(0,0,0)),
	color-stop(0.21, rgb(214,214,214))
);
height:auto;


margin-top:-40px;
padding-top:40px;
padding-bottom:100px;

-moz-border-radius-topleft: 15px;
border-top-left-radius: 15px;
}


div#content{
z-index:1;
padding: 20px 40px 5px 40px;
}

div#postit{
  z-index:3;
  margin: -30px 0 0 10px;
  padding:80px 65px 0 62px;
  background: url( '<%= asset_path('post-it.png') %>' );
  background-repeat:no-repeat;
  height:260px;
  width:331px;
  position:relative;
  pointer-events:none;
  background-size:contain;
}

div#posttext{

/* Safari */
-webkit-transform: rotate(-7deg);

/* Firefox */
-moz-transform: rotate(-7deg);

/* IE */
-ms-transform: rotate(-7deg);

/* Opera */
-o-transform: rotate(-7deg);

width: 50%;
line-height: 150%;
}

div.leftdiv{
float:left;
width: 350px;
}

div.rightdiv{
min-height:347px;
}

div#footer{
  text-align: center;

}

div#imageblock{
  display: inline-block;
}

div#imageblock img{
max-width:32%;
}
