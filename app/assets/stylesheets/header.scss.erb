@font-face
{
font-family: 'Coolvetica Rg';
src: url('<%= asset_path('coolvetica rg.otf') %>');
src: url('<%= asset_path('coolvetica rg.ttf') %>') format('truetype');
}

#headerbg
{
padding-top:20px;
z-index:1;
}

#headerbanner
{
background:black;
margin-left:160px;
-moz-border-radius-topright: 15px;
-moz-border-radius-topleft: 15px;
border-top-right-radius: 15px;
border-top-left-radius: 15px;
padding: 5px 0 0 10px;
min-width: 750px;
}

div#headertextwr
{
overflow:hidden;
float:right;
min-width:440px;
}

div.headertext
{
min-width:100%;
text-align:center;
font:900 14px/22px "Arial", Helvetica, sans-serif;
height: 100%;
}

div#a
{
line-height: 1.5em;
font-size: 18px;
}

div#b
{
line-height: 1.5em;
font-size: 24px;
}

#headerbar{
overflow:hidden;
height: 40px;
}

ul#headermenu
{
padding: 0;
margin: 0 0;
list-style:none;
float:left;
min-width:100%;
overflow-y: hidden;
overflow-x:auto;
width:700px;
overflow-y: hidden;
overflow-x:auto;
height: 100%;
}


ul li.button
{
float:left;
display:inline;
margin:0 0;
min-width: <%= 100/6.0  %>%;
height: 100%;
}

ul li.button a
{
text-decoration:none;
float:left;
color: rgb(105, 28, 28);
cursor:pointer;
font:900 14px/22px "Arial", Helvetica, sans-serif;
margin: 0 0 0 -2px;
min-width:100%;
text-align:center;
max-height:30px;
padding-top:10px;
//background:url('gradtest.png');
background-color: rgb(255,61,61);
height:100%;
position:relative;
border-left: 2px solid rgb(197, 41, 41);
}

ul li.button:first-child a
{
  -moz-border-radius-topleft: 15px;
  border-top-left-radius: 15px;
}


ul li.button a span
{
margin: 10px 0 0 0;
padding: 4px 8px 5px 8px;
position: relative;
min-width:100%;
text-transform: capitalize;
}

ul#headermenu li.button a.current, ul#headermenu li.button a:hover{
color: white;
}